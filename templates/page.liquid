{% comment %}
  The page template (for lookbooks and other custom pages)
{% endcomment %}

<main class="container mx-auto px-4 py-16">
  <div class="text-center mb-16">
    <h1 class="font-serif text-4xl md:text-5xl mb-4">{{ page.title }}</h1>
    {%- if page.content != blank -%}
      <div class="text-muted-foreground max-w-2xl mx-auto">
        {{ page.content }}
      </div>
    {%- endif -%}
  </div>

  {%- comment -%} Lookbooks content can be added here via page metafields or sections {%- endcomment -%}
</main>

