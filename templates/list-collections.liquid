{% comment %}
  The list collections template
{% endcomment %}

<main class="container mx-auto px-4 py-16">
  <div class="text-center mb-16">
    <h1 class="font-serif text-4xl md:text-5xl mb-4">Collections</h1>
    <p class="text-muted-foreground max-w-2xl mx-auto">
      Discover our curated collections, each telling its own story
    </p>
  </div>

  {%- if collections.size > 0 -%}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {%- for collection in collections -%}
        <a href="{{ collection.url }}" class="group">
          <div class="relative aspect-[3/4] overflow-hidden mb-4">
            {%- if collection.featured_image != blank -%}
              <img
                src="{{ collection.featured_image | image_url: width: 800 }}"
                alt="{{ collection.title | escape }}"
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                loading="lazy"
                width="{{ collection.featured_image.width }}"
                height="{{ collection.featured_image.height }}"
              >
            {%- else -%}
              {{ 'placeholder.svg' | asset_url | image_tag: loading: 'lazy', class: 'w-full h-full object-cover transition-transform duration-700 group-hover:scale-105' }}
            {%- endif -%}
            <div class="absolute inset-0 bg-foreground/0 group-hover:bg-foreground/10 transition-colors duration-500"></div>
          </div>
          <h2 class="font-serif text-2xl mb-2">{{ collection.title }}</h2>
          <p class="text-muted-foreground mb-2">{{ collection.description | default: 'Explore this collection' }}</p>
          <p class="text-sm text-muted-foreground">
            {{ collection.products_count }} {{ collection.products_count | pluralize: 'piece', 'pieces' }}
          </p>
        </a>
      {%- endfor -%}
    </div>
  {%- else -%}
    <div class="text-center">
      <p class="text-muted-foreground">No collections found.</p>
    </div>
  {%- endif -%}
</main>

