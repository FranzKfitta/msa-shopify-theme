<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; {{ 'general.meta.tags' | t: tags: current_tags.join(', ') }}{% endif -%}
      {%- if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Dancing+Script:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- Custom Agharti font -->
    <style>
      @font-face {
        font-family: 'agharti-family';
        src: url({{ 'fonts/agharti-family/Family Deliverables/Agharti Variable/AghartiVF.woff2' | asset_url }}) format('woff2'),
             url({{ 'fonts/agharti-family/Family Deliverables/Agharti Variable/AghartiVF.woff' | asset_url }}) format('woff');
        font-weight: 100 900;
        font-style: normal;
        font-display: swap;
      }
    </style>

    <!-- Theme CSS -->
    {{ 'theme.css' | asset_url | stylesheet_tag }}

    <script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');</script>

    {{ content_for_header }}
  </head>

  <body class="gradient">
    <a class="skip-to-content-link button visually-hidden" href="#MainContent">
      {{ 'accessibility.skip_to_text' | t }}
    </a>

    {%- render 'announcement-bar' -%}
    {% section 'header' %}

    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <div id="search-overlay" class="overlay" aria-hidden="true" hidden>
      <div class="overlay-backdrop" data-overlay-close></div>
      <div class="overlay-panel" role="dialog" aria-modal="true" aria-label="Recherche">
        <button type="button" class="overlay-close btn btn-ghost btn-icon" data-overlay-close aria-label="Fermer">
          &times;
        </button>
        <form action="{{ routes.search_url }}" method="get" role="search" class="overlay-search-form">
          <label class="block text-sm font-medium mb-2" for="overlay-search-input">Rechercher</label>
          <div class="flex gap-2">
            <input id="overlay-search-input" type="search" name="q" class="input bg-background flex-1" placeholder="Rechercher…" autocomplete="off">
            <input type="hidden" name="type" value="product">
            <button type="submit" class="btn btn-default">Rechercher</button>
          </div>
        </form>

        <div class="predictive-search" id="predictive-search" aria-live="polite" aria-label="Résultats de recherche">
          <div class="predictive-search-inner" data-predictive-search-results hidden></div>
        </div>
      </div>
    </div>

    <div id="newsletter-popup" class="overlay" aria-hidden="true" hidden>
      <div class="overlay-backdrop" data-newsletter-close></div>
      <div class="overlay-panel" role="dialog" aria-modal="true" aria-label="Newsletter">
        <button type="button" class="overlay-close btn btn-ghost btn-icon" data-newsletter-close aria-label="Fermer">
          &times;
        </button>
        <div class="newsletter-popup-inner">
          <div class="newsletter-popup-media">
            <div class="newsletter-popup-media-inner">
              {%- if settings.newsletter_popup_image != blank -%}
                <img src="{{ settings.newsletter_popup_image | image_url: width: 1200 }}" alt="M/SA" loading="lazy">
              {%- else -%}
                <img src="{{ 'newsletter-popup.jpg' | asset_url }}" alt="M/SA" loading="lazy">
              {%- endif -%}
            </div>
          </div>
          <div class="newsletter-popup-content">
            <p class="text-sm uppercase tracking-wide mb-2">welcome on the Pure club .</p>
            <p class="text-sm text-muted-foreground mb-6">
              Inscrivez-vous pour recevoir les informations sur nos collections, nos offres exclusives, notre newsletter, nos événements SLOW MUST GO ON!. En vous abonnant, vous acceptez notre Politique de confidentialité.
            </p>

            {% form 'customer', class: 'newsletter-popup-form' %}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="flex gap-2">
                <input type="email" name="contact[email]" class="input bg-background flex-1" placeholder="Votre email" required>
                <button type="submit" class="btn btn-default">S’inscrire</button>
              </div>
              {% if form.posted_successfully? %}
                <p class="text-xs mt-3">Merci ! Votre inscription est confirmée.</p>
              {% endif %}
              {% if form.errors %}
                <p class="text-xs mt-3 text-red-600">{{ form.errors | default_errors }}</p>
              {% endif %}
            {% endform %}

            <div class="text-xs text-muted-foreground mt-4">
              <a href="{% if shop.policies.privacy_policy and shop.policies.privacy_policy.url != blank %}{{ shop.policies.privacy_policy.url }}{% else %}{{ routes.root_url }}/policies/privacy-policy{% endif %}" class="underline">Politique de confidentialité</a>
            </div>
          </div>
        </div>
      </div>
      <div
        data-newsletter-config
        data-newsletter-delay-ms="2000"
        data-newsletter-cookie-days="30"
      ></div>
    </div>

    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
      <li id="a11y-new-window-message">{{ 'accessibility.link_messages.new_window' | t }}</li>
    </ul>

    <script>
      window.shopUrl = '{{ request.origin }}';
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}',
        cart_url: '{{ routes.cart_url }}',
        predictive_search_url: '{{ routes.predictive_search_url }}',
        all_products_collection_url: '{{ routes.all_products_collection_url }}'
      };

      window.cartStrings = {
        error: `{{ 'sections.cart.cart_error' | t }}`,
        quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`
      }

      window.variantStrings = {
        addToCart: `{{ 'products.product.add_to_cart' | t }}`,
        soldOut: `{{ 'products.product.sold_out' | t }}`,
        unavailable: `{{ 'products.product.unavailable' | t }}`,
        unavailable_with_option: `{{ 'products.product.value_unavailable' | t: option_value: '[value]' }}`,
      }
    </script>

    {{ 'theme.js' | asset_url | script_tag }}
  </body>
</html>

