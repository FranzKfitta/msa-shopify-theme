<div id="cart-drawer" class="fixed inset-y-0 right-0 w-full max-w-lg bg-white shadow-elegant border-l border-gray-100 transform translate-x-full transition-transform duration-300 ease-in-out z-50" aria-hidden="true">
  <div class="flex flex-col h-full">
    <!-- Header -->
    <div class="flex items-center justify-between px-8 py-6 border-b border-gray-100 bg-white flex-shrink-0">
      <div class="flex items-center gap-3">
        <h2 class="font-serif text-xl font-light tracking-wider text-black">CART</h2>
        {%- if cart.item_count > 0 -%}
          <span class="bg-gray-200 text-gray-500 rounded-full w-6 h-6 flex items-center justify-center text-xs font-medium" id="cart-count-badge">{{ cart.item_count }}</span>
        {%- endif -%}
      </div>
      <button type="button" id="cart-drawer-close" class="text-black cart-btn-icon p-3 hover:bg-gray-50 rounded-md transition-colors" aria-label="Close cart">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Cart Items -->
    <div class="flex-1 overflow-y-auto min-h-0" id="cart-drawer-items">
      {%- if cart.item_count > 0 -%}
        {%- for item in cart.items -%}
          <div class="flex gap-6 px-8 py-6 border-b border-gray-100 hover:bg-gray-50 transition-colors cart-item-fade-in" data-cart-item-key="{{ item.key }}">
            <div class="w-28 h-28 flex-shrink-0 overflow-hidden rounded-md">
              {%- if item.image != blank -%}
                <img src="{{ item.image | image_url: width: 120 }}" alt="{{ item.title | escape }}" class="w-full h-full object-cover" style="max-width: 112px; max-height: 112px; width: 100%; height: 100%;">
              {%- endif -%}
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-light text-base mb-1 text-black leading-tight">{{ item.product.title }}</h3>
              {%- if item.variant.title != 'Default Title' -%}
                <p class="text-xs text-gray-500 mb-2">{{ item.variant.title }}</p>
              {%- endif -%}
              <p class="font-medium text-base mb-4 text-black">{{ item.line_price | money }}</p>
              <div class="flex items-center gap-2">
                <button type="button" class="cart-item-decrease cart-btn-quantity h-10 w-10 flex items-center justify-center border border-gray-200 bg-white text-black text-sm rounded-md hover:bg-gray-50 transition-colors" data-item-key="{{ item.key }}" data-variant-id="{{ item.variant_id }}">âˆ’</button>
                <span class="cart-item-quantity text-base font-medium min-w-[40px] text-center text-black">{{ item.quantity }}</span>
                <button type="button" class="cart-item-increase cart-btn-quantity h-10 w-10 flex items-center justify-center border border-gray-200 bg-white text-black text-sm rounded-md hover:bg-gray-50 transition-colors" data-item-key="{{ item.key }}" data-variant-id="{{ item.variant_id }}">+</button>
              </div>
            </div>
            <button type="button" class="cart-item-remove cart-btn-remove text-gray-400 hover:text-gray-600 flex-shrink-0 self-start mt-1 p-2 rounded-md hover:bg-gray-100 transition-colors" data-item-key="{{ item.key }}" data-variant-id="{{ item.variant_id }}" aria-label="Remove item">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            </button>
          </div>
        {%- endfor -%}
      {%- else -%}
        <div class="px-8 py-16 text-center">
          <svg class="w-16 h-16 mx-auto mb-6 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <h3 class="text-2xl font-light text-black mb-3">Your cart is empty</h3>
          <p class="text-sm text-gray-500 mb-8">Discover our beautiful collection</p>
          <a href="{{ routes.all_products_collection_url | default: '/collections/all' }}" class="cart-btn-primary inline-block bg-black text-white text-center py-3 px-8 font-normal hover:bg-gray-900 transition-colors rounded-md">
            Start shopping
          </a>
        </div>
      {%- endif -%}
    </div>

    <!-- Footer -->
    {%- if cart.item_count > 0 -%}
    <div class="border-t border-gray-100 bg-white flex-shrink-0">
      <!-- Discount Section -->
      <div class="px-8 py-5 border-b border-gray-100">
        <button type="button" id="discount-toggle" class="cart-discount-toggle flex items-center justify-between w-full text-left hover:text-gray-600 transition-colors">
          <span class="text-sm font-normal text-black">Have a discount code?</span>
          <svg class="cart-discount-icon h-4 w-4 text-black transition-transform" id="discount-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v16m8-8H4" />
          </svg>
        </button>
        <div id="discount-form" class="hidden mt-4">
          <form id="cart-discount-form" class="flex gap-2">
            <input type="text" id="discount-code" name="discount" placeholder="Discount code" class="cart-input-modern flex-1 px-4 py-2 h-10 border border-gray-200 bg-white text-sm rounded-md focus:outline-none focus:ring-1 focus:ring-black focus:border-black transition-colors" required>
            <button type="submit" class="cart-btn-apply px-5 py-2 h-10 bg-black text-white text-sm font-normal rounded-md hover:bg-gray-900 transition-colors">Apply</button>
          </form>
          <div id="discount-message" class="mt-2 text-xs"></div>
          <p class="mt-2 text-xs text-gray-500">Discount codes are applied at checkout</p>
        </div>
      </div>

      <!-- Total Section -->
      <div class="px-8 py-6">
        <div class="flex justify-between items-center mb-2">
          <span class="text-sm font-normal text-black">Estimated total</span>
          <span class="font-semibold text-xl text-black" id="cart-total">{{ cart.total_price | money }} {{ cart.currency.iso_code }}</span>
        </div>
        <p class="text-xs text-gray-500 mb-6">Duties and taxes included. Shipping is calculated at checkout.</p>

        <!-- Action Buttons -->
        <div class="space-y-3">
          <a href="{{ routes.cart_url }}" class="cart-btn-primary block w-full bg-black text-white text-center py-3.5 px-4 font-normal rounded-md hover:bg-gray-900 transition-all">
            Proceed to checkout
          </a>
          <a href="{{ routes.all_products_collection_url | default: '/collections/all' }}" class="cart-btn-secondary block w-full bg-white text-black text-center py-3.5 px-4 font-normal border border-gray-200 rounded-md hover:bg-gray-50 transition-all">
            Continue shopping
          </a>
          {%- comment -%} PayPal button - redirects to checkout with PayPal option {%- endcomment -%}
          {%- if shop.enabled_payment_types contains 'paypal' or shop.enabled_payment_types.size > 0 -%}
            <a href="{{ routes.cart_url }}?checkout=express&gateway=paypal" class="cart-btn-secondary block w-full bg-[#FFC439] text-black text-center py-3.5 px-4 font-normal rounded-md hover:bg-[#FFD666] transition-all flex items-center justify-center gap-2">
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M7.076 21.337H2.47a.641.641 0 0 1-.633-.74L4.944.901C5.026.382 5.474 0 5.998 0h7.46c2.57 0 4.578.543 5.69 1.81 1.01 1.15 1.304 2.42 1.012 4.287-.023.143-.047.288-.077.437-.983 5.05-4.13 6.797-8.61 6.797h-2.19c-.524 0-.968.382-1.05.9l-1.12 7.19zm4.172-11.583H13.7c.63 0 1.235.103 1.823.309 1.17.406 2.023 1.08 2.653 2.31.315.615.482 1.258.495 1.9.01.52.01.99.01 1.38 0 .3-.002.58-.01.81-.003.18-.005.33-.005.45 0 .12.002.22.005.3.003.08.005.15.005.21 0 .06-.002.1-.005.12 0 .02-.002.03-.005.03h-2.88c-.524 0-.968-.382-1.05-.9l-1.12-7.19-1.12-7.19c-.082-.518.526-.9 1.05-.9h2.19c.524 0 .968.382 1.05.9l.84 5.39z"/>
              </svg>
              PayPal
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
    {%- endif -%}
  </div>
</div>

<div id="cart-drawer-overlay" class="fixed inset-0 bg-black/50 opacity-0 pointer-events-none transition-opacity duration-300 z-40" aria-hidden="true"></div>
